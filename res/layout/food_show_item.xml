<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="${packageName}.${activityClass}" 
    android:background="@drawable/classify_item" 
    >

	<RelativeLayout 
		     android:layout_width="match_parent"
   			 android:layout_height="wrap_content"
   			 android:layout_marginTop="8dip"     
   			 android:layout_marginBottom="8dip"
	>

	    <ImageView 
	     		android:id="@+id/foodShowImg"
	     		android:layout_width="60dip"
            	android:layout_height="70dip"
            	android:layout_marginTop="8dip"     
	     />
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:layout_toRightOf="@+id/foodShowImg"
   			android:layout_marginLeft="5dip"
   			android:layout_marginTop="8dip"  
   			android:orientation="vertical"
	    >
	    
		    <RelativeLayout 
		        android:layout_width="match_parent"
	   			android:layout_height="wrap_content"
		    >
		    	<TextView 
		    		android:id="@+id/foodShowName"    
		    		android:layout_width="wrap_content"
	   				android:layout_height="wrap_content"
	   				android:textColor="#DC143C"
	   				android:textSize="16sp"
	   				android:text="油煎豆腐"
	   				android:textStyle="bold"
	   				android:singleLine="true"
	   				android:ellipsize="end"
	   				android:layout_alignBaseline="@+id/delBtn"
		    	/>
		    	
				<Button
				    android:id="@+id/delBtn"   
				    android:layout_width="wrap_content"
	   				android:layout_height="35dip"
	   				android:text="删除"
	   				android:layout_alignParentRight="true"
	   				android:layout_marginRight="10dip"
	   				android:visibility="gone"
				></Button>
		    	
	        
	   		</RelativeLayout>
	 
	       
	   	<LinearLayout 
	       		 android:layout_width="match_parent"
   				 android:layout_height="wrap_content"
   				 android:layout_marginTop="4dip"
   				 android:orientation="vertical"
	   		 >
		    	
		   		    <LinearLayout 
		   		        android:layout_width="match_parent"
	   				 	android:layout_height="wrap_content"
		   		        android:orientation="horizontal"
		   		    >
		   		    		<LinearLayout 
		   		       			 android:layout_width="1dip"
	   				 			 android:layout_height="wrap_content"
		   		       			 android:orientation="horizontal"
		   		       			 android:layout_weight="1.5"
		   		  			  >
		   		  			  
		   		    		    <TextView 
						    		android:layout_width="wrap_content"
					   				android:layout_height="wrap_content"
					   				android:text="材料: "
					   				android:textSize="12sp"
		    					/>
		   		    		    
		   		    		   <TextView 
		   		    		        android:id="@+id/foodContent"
						    		android:layout_width="wrap_content"
					   				android:layout_height="wrap_content"
					   				android:text="油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐油煎豆腐"
					   				android:textColor="#696969"
					   				android:textSize="11sp"
					   				android:singleLine="true"
	   								android:ellipsize="end" 
		    					/>

	   		    			</LinearLayout>
	   		    			
		   		    		<LinearLayout 
		   		       			 android:layout_width="1dip"
	   				 			 android:layout_height="wrap_content"
		   		       			 android:orientation="horizontal"
		   		       			 android:layout_weight="1.0"
		   		  			  >
		   		    		   
		   		    		    <TextView 
						    		android:layout_width="wrap_content"
					   				android:layout_height="wrap_content"
					   				android:text="访问次数 : "
					   				android:textSize="12sp"
		    					/>
		   		    		    
		   		    		   <TextView 
		   		    		        android:id="@+id/foodCount"
						    		android:layout_width="wrap_content"
					   				android:layout_height="wrap_content"
					   				android:text="300"
					   				android:textColor="#696969"
					   				android:textSize="11sp"
		    					/>
		   		    		    

	   		    			</LinearLayout>
		   		    				   		        	

	   		    	</LinearLayout>
	   		    
		   		    <LinearLayout 
		   		    	android:layout_width="match_parent"
	   				 	android:layout_height="wrap_content"
		   		        android:orientation="horizontal"  
		   		        android:layout_marginTop="3dip"  
		   		    >
		   		    		
		   		        	<LinearLayout 
		   		       			 android:layout_width="1dip"
	   				 			 android:layout_height="wrap_content"
		   		       			 android:orientation="horizontal"
		   		       	      	 android:layout_weight="1.0"		 		   		       			 
		   		  			  >
		   		    		  
		   		        	    <TextView 
						    		android:layout_width="wrap_content"
					   				android:layout_height="wrap_content"
					   				android:text="标注: "
					   				android:textSize="12sp"
		    					/>
		   		    		    
		   
		   		        	     <TextView 
		   		        	       	android:id="@+id/foodIntroduce"
						    		android:layout_width="wrap_content"
					   				android:layout_height="wrap_content"
					   				android:textColor="#696969"
					   				android:text="油煎豆腐油煎豆腐"
					   				android:textSize="11sp"
					   				android:ellipsize="end"
					   				android:maxLines="2"
		    					/>
		   		      
	   		    			</LinearLayout>
   		        
		   		    </LinearLayout>


	   	 	</LinearLayout>
	   	 	
	    </LinearLayout>
	    
	</RelativeLayout>


</LinearLayout>
